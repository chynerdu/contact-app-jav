<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CreateContactsActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <TextView
        android:id="@+id/createContactLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide the required fields below"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="normal">
    </TextView>

    <EditText
        android:id="@+id/editTextName"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:hint="Phone Number"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        >
        <Button
        android:id="@+id/buttonCancelAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
            android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
            android:backgroundTint ="#F44336"
            android:onClick="onCancelContactClicked"
        />

    <Button
        android:id="@+id/buttonAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Save"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="onAddContactClicked" />
    </LinearLayout>

</LinearLayout>


</LinearLayout>